default vesamenu.c32
prompt 0
timeout 50
ontimeout local

menu clear
menu background splash.png
menu title CannyOS: Node Boot Menu
menu vshift 5
menu rows 18
menu margin 8
#menu hidden
menu helpmsgrow 15
menu tabmsgrow 13

# Border Area
menu color border * #00000000 #00000000 none
# Selected item
menu color sel 0 #ffffffff #00000000 none
# Title bar
menu color title 0 #ff7ba3d0 #00000000 none
# Press [Tab] message
menu color tabmsg 0 #ff3a6496 #00000000 none
# Unselected menu item
menu color unsel 0 #84b8ffff #00000000 none
# Selected hotkey
menu color hotsel 0 #84b8ffff #00000000 none
# Unselected hotkey
menu color hotkey 0 #ffffffff #00000000 none
# Help text
menu color help 0 #ffffffff #00000000 none
# A scrollbar of some type? Not sure.
menu color scrollbar 0 #ffffffff #ff355594 none
# Timeout msg
menu color timeout 0 #ffffffff #00000000 none
menu color timeout_msg 0 #ffffffff #00000000 none
# Command prompt text
menu color cmdmark 0 #84b8ffff #00000000 none
menu color cmdline 0 #ffffffff #00000000 none

# Do not display the actual menu unless the user presses a key. All that is displayed is a timeout message.

menu tabmsg Press Tab for full configuration options on menu items.

menu separator # insert an empty line
menu separator # insert an empty line

label local
menu label ^Boot: Local Disc
localboot 0xffff

label deploy-base
menu label ^Deploy: CannyOS: Base
kernel cannyos/vmlinuz
append initrd=cannyos/initrd.img repo=http://%(server_ip)s:8000/installer/lorax/ ks=http://%(server_ip)s/ks/cannyos-anaconda-base.ks net.ifnames=0 biosdevname=0

label deploy-node
menu label Deploy: CannyOS: ^Node
kernel cannyos/vmlinuz
append initrd=cannyos/initrd.img repo=http://%(server_ip)s:8000/installer/lorax/ ks=http://%(server_ip)s/ks/cannyos-anaconda-node.ks net.ifnames=0 biosdevname=0

label deploy-centos-cloud
menu label Deploy: CentOS: ^Cloud Image
kernel coreos/coreos_production_pxe.vmlinuz
append initrd=coreos/coreos_production_pxe_image.cpio.gz cloud-config-url=http://%(server_ip)s/cloudconfig/centos-deploy-rpm.sh rootfstype=btrfs coreos.autologin

label deploy-centos-rpm
menu label Deploy: CentOS: ^RPM
kernel centos7/vmlinuz
append initrd=centos7/initrd.img method=http://mirror.centos.org/centos/7/os/x86_64/ devfs=nomount ip=dhcp net.ifnames=0 biosdevname=0

label run-coreos
menu label Run: CoreOS ISO in Ramdisk
kernel memdisk
append iso initrd=iso/coreos_production_iso_image.iso raw

label deploy-coreos
menu label Deploy: CoreOS Node
kernel coreos/coreos_production_pxe.vmlinuz
append initrd=coreos/coreos_production_pxe_image.cpio.gz cloud-config-url=http://%(server_ip)s/cloudconfig/coreos.sh rootfstype=btrfs coreos.autologin

label run-dban
menu label Run: DBAN and ^wipe node
kernel dban/dban.bzi
append nuke="dwipe --autonuke --method quick" silent

label deploy-build-node
menu label Deploy: CannyOS: Build Node
kernel centos7/vmlinuz
append initrd=centos7/initrd.img ks=http://%(server_ip)s/ks/cannyos-build-node.ks devfs=nomount ip=dhcp net.ifnames=0 biosdevname=0
